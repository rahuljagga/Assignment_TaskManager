        var apiurl = "http://localhost:52838/api/TaskDBModels/" + $("#TaskID").val();
       
        $.ajax({
            url: apiurl,
            type: 'DELETE',
            //dataType: 'json',
            //data: data,
            success: function () {
                alert("Data Deleted Successfully");
                window.location.href = '@Url.Action("Index")';
                
